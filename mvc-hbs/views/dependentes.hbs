<div class="row">
    <div class="col-11">
        <h1 class="display-4">Dependentes</h1>
    </div>
    <div class="col-1">
        <a href="/dependentes/cadastro_dependencias" class="btn btn-primary" role="button">
            <span class="material-icons">add</span>
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">ID_funcionarios</th>
            <th scope="col">Telefone</th>

        </tr>
    </thead>
    <tbody>
        {{#each data}}
        <tr>
            <td>{{ID}}</td>
            <td>{{NOME}}</td>
            <td>{{ID_funcionarios}}</td>
            <td>{{formataTelefone TELEFONE}}</td>

            <td>
                <div class="btn-toolbar mb-1" role="toolbar">
                    <div class="btn-group mr-2">
                        <button type="button" class="btn btn-success" onclick="editar({{ID}})">
                            <span class="material-icons">edit</span>
                        </button>
                        <button type="button" class="btn btn-danger" onclick="excluir({{ID}})">
                            <span class="material-icons">delete</span>
                        </button>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>

<script>
    function editar(id) {
        window.location.href = `/funcionarios/dependentes/${id}`;
    }
    async function excluir(id) {
        await fetch(`/funcionarios/dependentes/${id}`, {method: "delete", headers: { "Content-type": "applicantion/json" } });
        window.location.href = "dependentes";
    }
</script>
